<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="SMART COMPANION"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@color/background_floating_material_dark"
        android:textSize="30dp"
        android:theme="@style/Base.TextAppearance.AppCompat.Title.Inverse"
        android:transitionName="@string/abc_action_bar_home_subtitle_description_format"
         />

    <Button
        android:id="@+id/Cal"
        android:layout_width="86dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_gravity="center_vertical"
        android:text="Calendar Reminder"
        android:typeface="serif"
        android:layout_above="@+id/wifi"
        android:background="@drawable/mybutton"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:singleLine="true"
        style="@style/AppTheme"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:focusableInTouchMode="false" />

    <Button
        android:id="@+id/wifi"
        android:layout_width="86dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_centerVertical="true"
        android:drawableLeft="@android:drawable/ic_menu_compass"
        android:layout_gravity="center_vertical"
        android:text="Wi-Fi Reminder"
        android:typeface="serif"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="@drawable/mybutton"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        style="@style/AppTheme" />

    <Button
        android:id="@+id/phonbased"
        android:layout_width="86dp"
        android:layout_height="65dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.41"
        android:text="Phone Call Reminder"
        android:typeface="serif"
        android:background="@drawable/mybutton"
        android:layout_below="@+id/wifi"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textSize="20dp"
        style="@style/AppTheme" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignBottom="@+id/Cal"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>
