<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nispand.smartzcompanion.EditWifiReminder"
    android:id="@+id/editWifi">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:inputType="textMultiLine"
        android:id="@+id/editText"
        android:selectAllOnFocus="true"
        android:scrollbars = "vertical"
        android:text="Reminder Note"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="111dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save and turn on Reminder"
        android:id="@+id/btnSave"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Reminder"
        android:id="@+id/btnDel"
        android:layout_below="@+id/btnSave"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn off reminder"
        android:id="@+id/btnSwitchOff"
        android:layout_below="@+id/btnDel"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
